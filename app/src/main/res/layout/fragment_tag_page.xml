<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".ui.fragments.TagPageFragment">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/shelf_book_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/no_result_view"
        android:layout_width="@dimen/dp_136"
        android:layout_height="@dimen/dp_103"
        android:src="@drawable/home_default_image"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>